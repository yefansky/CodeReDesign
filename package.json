{
  "name": "CodeReDesign",
  "displayName": "CodeReDesign",
  "description": "A VSCode extension for code refactoring and redesign.",
  "version": "0.0.1",
  "engines": {
    "vscode": "^1.96.0"
  },
  "categories": [
    "Other"
  ],
  "activationEvents": [
    "onCommand:codeReDesign.generateCvb",
    "onCommand:codeReDesign.uploadCvb"
  ],
  "main": "./dist/extension.js",
  "contributes": {
      "commands": [
          {
              "command": "codeReDesign.generateCvb",
              "title": "codeReDesign:Generate CVB File"
          },
          {
              "command": "codeReDesign.uploadCvb",
              "title": "codeReDesign:Upload CVB and Call API"
          },
          {
            "command": "codeReDesign.applyCvb",
            "title": "CodeReDesign: Apply CVB to Workspace"
          }
      ],
      "configuration": {
          "title": "CodeReDesign",
          "properties": {
              "codeReDesign.deepSeekApiKey": {
                  "type": "string",
                  "default": "",
                  "description": "DeepSeek API Key"
              }
          }
      }
  },
  "scripts": {
    "vscode:prepublish": "npm run package",
    "compile": "webpack",
    "watch": "webpack --watch",
    "package": "webpack --mode production --devtool hidden-source-map",
    "compile-tests": "tsc -p . --outDir out",
    "watch-tests": "tsc -p . -w --outDir out",
    "pretest": "npm run compile-tests && npm run compile && npm run lint",
    "lint": "eslint src",
    "test": "vscode-test"
  },
  "devDependencies": {
    "@types/mocha": "^10.0.10",
    "@types/node": "20.x",
    "@types/vscode": "^1.96.0",
    "@typescript-eslint/eslint-plugin": "^8.17.0",
    "@typescript-eslint/parser": "^8.17.0",
    "@vscode/test-cli": "^0.0.10",
    "@vscode/test-electron": "^2.4.1",
    "eslint": "^9.16.0",
    "ts-loader": "^9.5.1",
    "typescript": "^5.7.2",
    "webpack": "^5.95.0",
    "webpack-cli": "^5.1.4"
  },
  "dependencies": {
    "iconv-lite": "^0.6.3",
    "jschardet": "^3.1.4",
    "openai": "^4.78.1"
  }
}
